generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  image     String?
  emailVerified DateTime?
  password  String?
  status    String    @default("PENDING")
  plan      String    @default("TRIAL")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  entities  Entity[]
  accounts  Account[]
  sessions  Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Entity {
  id              String        @id @default(cuid())
  userId          String
  entityType      String        @default("BUSINESS")
  legalName       String?
  siret           String?       @unique
  firstName       String?
  lastName        String?
  email           String
  website         String?
  description     String?
  kycStatus       String        @default("PENDING")
  validationLevel String        @default("BRONZE")
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  certificates    Certificate[]
  signatures      Signature[]
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Certificate {
  id              String         @id @default(cuid())
  entityId        String
  tokenId         String?        @unique
  txHash          String?        @unique
  contractAddress String?
  tokenURI        String?
  status          String         @default("PENDING")
  level           String         @default("BRONZE")
  issuedAt        DateTime       @default(now())
  entity          Entity         @relation(fields: [entityId], references: [id], onDelete: Cascade)
  verifications   Verification[]
  signatures      Signature[]
}

model Verification {
  id            String      @id @default(cuid())
  certificateId String
  ipAddress     String?
  country       String?
  userAgent     String?
  verifiedAt    DateTime    @default(now())
  certificate   Certificate @relation(fields: [certificateId], references: [id], onDelete: Cascade)
}

model Signature {
  id            String   @id @default(uuid())
  jti           String   @unique
  certificateId String
  certificate   Certificate @relation(fields: [certificateId], references: [id], onDelete: Cascade)
  entityId      String
  entity        Entity   @relation(fields: [entityId], references: [id], onDelete: Cascade)

  ctxType       String
  ctxHash       String
  ctxMetadata   Json?

  signature     String
  nonce         String   @unique

  issuedAt      DateTime @default(now())
  expiresAt     DateTime
  revoked       Boolean  @default(false)
  revokedAt     DateTime?

  verificationEvents VerificationEventV2[]

  @@index([certificateId])
  @@index([entityId])
  @@index([ctxHash])
}

model VerificationEvent {
  id        String   @id @default(uuid())
  jti       String
  ip        String?
  userAgent String?
  verdict   String
  createdAt DateTime @default(now())

  @@index([jti])
  @@index([createdAt])
}

model VerificationEventV2 {
  id          String   @id @default(uuid())
  signatureId String
  signature   Signature @relation(fields: [signatureId], references: [id], onDelete: Cascade)

  hashFromUrl String
  ipHash      String?
  userAgent   String?
  country     String?

  verdict     String
  fraudReason String?

  createdAt   DateTime @default(now())

  @@index([signatureId])
  @@index([verdict])
  @@index([createdAt])
}
